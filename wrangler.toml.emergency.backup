name = "ai-news-portal"
main = "src/index.js"
compatibility_date = "2024-01-01"

# Database binding (Remote D1)
[[d1_databases]]
binding = "DB"
database_name = "ai-news-db"
database_id = "8d92ad31-9787-49df-b7f2-cbb012f5538c"  # Replace after creating DB

# KV for sessions and caching
[[kv_namespaces]]
binding = "KV"
id = "4a3094ec8d5343b9a2459b3c4a627a25"  # Replace after creating KV
preview_id = "your-kv-preview-id-here"

# R2 for file storage
[[r2_buckets]]
binding = "BUCKET"
bucket_name = "ai-news-files"

# Environment variables
[vars]
JWT_SECRET = "your-jwt-secret-change-this"
API_URL = "https://api.your-domain.com"
FRONTEND_URL = "https://your-domain.com"
OPENWEATHER_API_KEY = "bd5e378503939ddaee76f12ad7a97608"

# Worker configurations for each micro-worker
# These will be deployed separately

# Cron triggers for automation (Phase 2)
# [[triggers]]
# crons = ["0 7 * * *"]  # Daily at 7 AM